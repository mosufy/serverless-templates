{
  "name": "serverless-template-static-website",
  "version": "1.0.0",
  "description": "Serverless Framework for static website",
  "scripts": {
    "start": "./scripts/start.sh",
    "build": "./scripts/build.sh",
    "deploy": "./scripts/serverless.sh",
    "pretest": "eslint --ignore-path .gitignore .",
    "test": "react-scripts test",
    "coverage": "yarn test --coverage --watchAll false",
    "coveralls": "yarn coverage && cat ./coverage/lcov.info | coveralls",
    "eject": "react-scripts eject",
    "storybook": "start-storybook"
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@storybook/addon-info": "^5.2.0",
    "@storybook/addon-knobs": "^5.2.0",
    "@storybook/react": "^5.2.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "^1.18.2",
    "serverless-finch": "^2.4.3",
    "serverless-webpack": "^5.3.1",
    "webpack": "4.39.1"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.js",
      "src/pages/**/*.js"
    ],
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "Sufiyan Rahmat <mosufy@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
